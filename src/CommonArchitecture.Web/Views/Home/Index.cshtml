@{
    ViewData["Title"] = "Modern Enterprise Solution";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-wrapper position-relative overflow-hidden d-flex align-items-center">
    <!-- Animated Background -->
    <div class="hero-bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>
    
    <div class="container position-relative z-2">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-text text-center text-lg-start mb-5 mb-lg-0">
                <div class="badge bg-white bg-opacity-10 border border-white border-opacity-25 text-white rounded-pill px-3 py-2 mb-4 fw-light backdrop-blur shadow-sm">
                    <span class="dot bg-success d-inline-block rounded-circle me-2"></span> .NET 9.0 Release Candidate
                </div>
                <h1 class="display-3 fw-bolder text-white mb-4 leading-tight">
                    Architect Your Future with <span class="text-gradient-cyan">Precision.</span>
                </h1>
                <p class="lead text-white-50 mb-5 pe-lg-5">
                    A production-ready reference architecture featuring <strong>CQRS</strong>, <strong>Domain-Driven Design</strong>, and modular <strong>Clean Architecture</strong>. Built for scalability.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg fw-bold hover-lift">
                        Access Admin <i class="bi bi-chevron-right ms-1"></i>
                    </a>
                    <a asp-area="Ecommerce" asp-controller="Shop" asp-action="Index" class="btn btn-outline-light btn-lg rounded-pill px-5 fw-bold hover-lift">
                        View Storefront
                    </a>
                </div>
            </div>
            <div class="col-lg-6">
                <!-- Floating Glass Cards (Abstract UI Mockup) -->
                <div class="hero-visual position-relative">
                    <div class="glass-card p-4 rounded-4 shadow-2xl animate-float-slow">
                        <div class="d-flex align-items-center mb-4">
                            <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:48px;height:48px">
                                <i class="bi bi-shield-lock-fill"></i>
                            </div>
                            <div>
                                <h6 class="text-white mb-0 fw-bold">Admin Portal</h6>
                                <small class="text-white-50">Role-Based Access Control</small>
                            </div>
                            <span class="badge bg-success ms-auto">Active</span>
                        </div>
                        <div class="d-flex justify-content-between text-white-50 small mb-2">
                            <span>Total Users</span>
                            <span>1,248</span>
                        </div>
                        <div class="progress bg-white bg-opacity-10" style="height: 6px;">
                            <div class="progress-bar bg-gradient-cyan" style="width: 75%"></div>
                        </div>
                        <div class="mt-4 pt-3 border-top border-white border-opacity-10">
                            <div class="d-flex gap-2">
                                <span class="badge bg-white bg-opacity-10 text-white fw-light border border-white border-opacity-10">CQRS</span>
                                <span class="badge bg-white bg-opacity-10 text-white fw-light border border-white border-opacity-10">MediatR</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="glass-card p-3 rounded-4 shadow-lg position-absolute top-50 start-0 translate-middle-x animate-float-fast" style="width: 200px; margin-top: 40px; margin-left: -20px;">
                        <div class="d-flex align-items-center gap-3">
                             <div class="icon-box bg-success text-white rounded-3 d-flex align-items-center justify-content-center" style="width:40px;height:40px">
                                <i class="bi bi-code-square"></i>
                            </div>
                            <div>
                                <h6 class="text-white mb-0 fw-bold">Clean Arch</h6>
                                <small class="text-white-50">Decoupled</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modules Section -->
<section class="py-5 bg-light">
    <div class="container py-5">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-6">
                <span class="text-primary fw-bold text-uppercase small tracking-wide">Included Modules</span>
                <h2 class="fw-bold mt-2">Everything you need to build</h2>
                <p class="text-muted">Two complete functional modules included out of the box.</p>
            </div>
        </div>
        
        <div class="row g-4 justify-content-center">
            <!-- App Card -->
            <div class="col-md-5">
                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="card-link text-decoration-none">
                    <div class="module-card bg-white p-5 rounded-4 shadow-sm h-100 border-0 text-center hover-scale">
                        <div class="module-icon bg-primary bg-opacity-10 text-primary rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center">
                            <i class="bi bi-speedometer2 fs-2"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-3">Admin Dashboard</h3>
                        <p class="text-muted mb-4">
                            Full-featured administrative interface with user management, system logs, role configuration, and analytics dashboard.
                        </p>
                        <span class="btn btn-link text-primary fw-bold p-0">Launch Dashboard <i class="bi bi-arrow-right ms-1"></i></span>
                    </div>
                </a>
            </div>
            
            <!-- Store Card -->
            <div class="col-md-5">
                 <a asp-area="Ecommerce" asp-controller="Shop" asp-action="Index" class="card-link text-decoration-none">
                    <div class="module-card bg-white p-5 rounded-4 shadow-sm h-100 border-0 text-center hover-scale">
                        <div class="module-icon bg-success bg-opacity-10 text-success rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center">
                            <i class="bi bi-shop fs-2"></i>
                        </div>
                        <h3 class="fw-bold text-dark mb-3">E-Commerce Store</h3>
                        <p class="text-muted mb-4">
                            Customer facing storefront with product catalogs, shopping cart functionality, and responsive grid layouts.
                        </p>
                         <span class="btn btn-link text-success fw-bold p-0">Visit Store <i class="bi bi-arrow-right ms-1"></i></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Tech Stack -->
<section class="py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-5">
                <h2 class="fw-bold mb-4">Powered by Modern Technology</h2>
                <div class="d-flex flex-column gap-4">
                    <div class="d-flex">
                        <div class="tech-icon bg-primary bg-opacity-10 text-primary me-3 flex-shrink-0">
                            <i class="bi bi-layers-fill"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">Clean Architecture</h5>
                            <p class="text-muted mb-0">Strict separation of concerns keeping Core domains independent of Infrastructure and UI.</p>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="tech-icon bg-warning bg-opacity-10 text-warning me-3 flex-shrink-0">
                            <i class="bi bi-diagram-3-fill"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">CQRS & MediatR</h5>
                            <p class="text-muted mb-0">Command Query Responsibility Segregation pattern implemented using MediatR library.</p>
                        </div>
                    </div>
                     <div class="d-flex">
                        <div class="tech-icon bg-info bg-opacity-10 text-info me-3 flex-shrink-0">
                             <i class="bi bi-database-fill-gear"></i>
                        </div>
                        <div>
                            <h5 class="fw-bold">EF Core 9</h5>
                            <p class="text-muted mb-0">Latest Entity Framework Core with Code-First migrations and optimized querying.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 offset-lg-1">
                 <div class="position-relative">
                    <div class="code-editor bg-dark rounded-4 shadow-lg overflow-hidden border border-secondary border-opacity-25">
                        <div class="d-flex align-items-center bg-black bg-opacity-50 px-3 py-2 border-bottom border-secondary border-opacity-25 opacity-75">
                            <div class="d-flex gap-2 me-3">
                                <div class="rounded-circle bg-danger" style="width:10px;height:10px"></div>
                                <div class="rounded-circle bg-warning" style="width:10px;height:10px"></div>
                                <div class="rounded-circle bg-success" style="width:10px;height:10px"></div>
                            </div>
                            <small class="text-white-50 font-monospace" style="font-size:0.8rem">Solution Explorer</small>
                        </div>
                        <div class="p-4 font-monospace text-light" style="font-size: 0.85rem; line-height: 1.8;">
                            <div class="text-white"><i class="bi bi-box-seam me-2"></i>CommonArchitecture</div>
                            <div class="ps-3 text-warning"><i class="bi bi-folder me-2"></i>Core <span class="text-secondary opacity-50 ms-2">// Domain Entities</span></div>
                            <div class="ps-3 text-info"><i class="bi bi-folder me-2"></i>Infrastructure <span class="text-secondary opacity-50 ms-2">// DB Context</span></div>
                            <div class="ps-3 text-success"><i class="bi bi-folder me-2"></i>Application <span class="text-secondary opacity-50 ms-2">// Use Cases</span></div>
                              <div class="ps-3 text-primary"><i class="bi bi-folder me-2"></i>API <span class="text-secondary opacity-50 ms-2">// REST Controllers</span></div>
                             <div class="ps-3 text-danger"><i class="bi bi-folder me-2"></i>Web <span class="text-secondary opacity-50 ms-2">// MVC UI</span></div>
                        </div>
                    </div>
                    <!-- Decorative back blob -->
                     <div class="position-absolute top-0 start-100 translate-middle bg-primary opacity-25 rounded-circle blur-3xl" style="width: 200px; height: 200px; z-index: -1;"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Hero Styles */
    .hero-wrapper {
        min-height: 100vh;
        background-color: #0f172a;
        padding-top: 80px; /* Navbar offset */
    }
    
    .hero-bg-shapes .shape {
        position: absolute;
        filter: blur(80px);
        opacity: 0.6;
        z-index: 1;
        animation: floatShape 20s infinite alternate cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .shape-1 {
        top: -10%;
        left: -10%;
        width: 50vw;
        height: 50vw;
        background: #4f46e5;
        border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    }
    
    .shape-2 {
        bottom: -20%;
        right: -10%;
        width: 40vw;
        height: 40vw;
        background: #06b6d4;
         border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
         animation-delay: -5s;
    }
     
    .shape-3 {
        top: 30%;
        left: 30%;
        width: 30vw;
        height: 30vw;
        background: #7c3aed;
        border-radius: 50%;
        opacity: 0.4;
        animation-delay: -10s;
    }

    @@keyframes floatShape {
        0% { transform: translate(0, 0) rotate(0deg); }
        100% { transform: translate(100px, 50px) rotate(20deg); }
    }
    
    .text-gradient-cyan {
        background: linear-gradient(135deg, #67e8f9 0%, #2dd4bf 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .bg-gradient-cyan {
         background: linear-gradient(90deg, #67e8f9 0%, #2dd4bf 100%);
    }

    /* Glass Cards */
    .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    }
    
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
    }

    /* Animations */
    .animate-float-slow {
        animation: floatVertical 6s ease-in-out infinite;
    }
    
    .animate-float-fast {
        animation: floatVertical 4s ease-in-out infinite reverse;
    }
    
    @@keyframes floatVertical {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
    
    .hover-scale {
         transition: transform 0.3s ease;
    }
    .hover-scale:hover {
        transform: scale(1.02);
    }
    
    .module-icon {
        width: 80px;
        height: 80px;
    }
     
    .tech-icon {
        width: 50px;
        height: 50px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }
    
    .blur-3xl {
        filter: blur(64px);
    }
    
    .leading-tight {
        line-height: 1.1;
    }
</style>